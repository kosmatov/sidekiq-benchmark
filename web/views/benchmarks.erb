<script type="text/javascript" src="//www.google.com/jsapi"></script>
<script type="text/javascript" src="<%= root_path %>js/chartkick.js"></script>

<header class="row">
  <div class="col-md-6">
    <h3>Benchmarks</h3>
  </div>
</header>

<section>
<% @types.each do |type| %>
  <h4><%= type %></h4>
  <figure class="row">
    <div class="col-md-7">
      <h5>Amount of tasks by execution time</h5>
      <%= column_chart @charts[type][:stats], library: { hAxis: { title: "Execution time (s)" }, vAxis: { title: "Tasks" } } %>
    </div>
    <div class="col-md-5">
      <h5>Average execution time</h5>
      <%= pie_chart @charts[type][:total] %>
    </div>
  </figure>
<% end %>
</section>
